    str = seqPLoop [(0,4, fast "<1 2>" $ "<x(3,8) x(5,8)>"),
                    (4,8, "<[x ~ x x] x(3,8)>")
                   ]
in 
do d1 $ (off (1/8) (|+| n 7) $ struct str $ sounds
