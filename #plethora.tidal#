

d1 $ drumstation $ off 0.25 (# dist 0) $ drum "[bd(<3 4 5>,8,<0 2>), cgh*2]"
  # begin 0 # dist (1) # gain 1.2 # tune sine # snappy rand


d2 $ chunk 4 (hurry 2) $ slow 2 $ chop 8 $ pan "0 1" # n "0 <1 3>" # sound "alphabet"

d3 $ off 0.25 (# crush 4) $ loopAt 2 $ slice "{0 <1 4> 2 3*2, 5*4 ~ 6 ~ 7 ~}" 8 $ sound "arc"
  # gain 1.1
  # legato 1


