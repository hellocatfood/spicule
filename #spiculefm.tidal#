import Sound.Tidal.MIDI.Context
import Sound.Tidal.MIDI.CC
import Sound.Tidal.MIDI.VolcaFM

displayOutputDevices >>= putStrLn
devices <- midiDevices

m1 <- midiStream devices "Scarlett 2i4 USB MIDI 1" 1 (volcafmController {Sound.Tidal.MIDI.Context.latency = 0.42})
let x = hush
let hush = x >> m1 silence

m1 $ jux rev $ n (off 0.25 (subtract 5) $ slow 2 $ "c6(3,8) a6*2")
  # dur 0.5
  # velocity (scale 0.5 0.75 saw)
  # algtm "0.1 ! ! 0.2"
  # moddecay (slow 4 saw)
  # cardecay saw
  # lfo rand
  |+| n "0 -12"
  # octac 0.2


d1 $ off "<0.25 0.125>" (# speed 0.5) $ slow 4 $ sound "bd ! ! ! bd*2 bd ! !"
  # begin 0.01
  # speed 4